<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guitar"
    tools:context="com.example.android.musicalstructureapp.RandomActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalscrollview"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        style="@style/HorizontalScrollView_Style">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Songs_Library_layout_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/song1"
                android:src="@drawable/song1"
                android:adjustViewBounds="true"
                style="@style/Songs_Library_Style" />

            <ImageView
                android:id="@+id/song2"
                android:src="@drawable/song2"
                android:adjustViewBounds="true"
                style="@style/Songs_Library_Style" />

            <ImageView
                android:id="@+id/song3"
                android:src="@drawable/song3"
                android:adjustViewBounds="true"
                style="@style/Songs_Library_Style" />

            <ImageView
                android:id="@+id/song4"
                android:src="@drawable/song4"
                android:adjustViewBounds="true"
                style="@style/Songs_Library_Style" />

            <ImageView
                android:id="@+id/song5"
                android:src="@drawable/song5"
                android:adjustViewBounds="true"
                style="@style/Songs_Library_Style"/>

            <ImageView
                android:id="@+id/song6"
                android:src="@drawable/song6"
                android:adjustViewBounds="true"
                style="@style/Songs_Library_Style" />

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        style="@style/Media_Player_Layout_Style"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/shuffle"
            android:layout_weight="1"
            style="@style/Shuffle_and_Repeat_Style"/>

        <ImageView
            android:src="@drawable/fast_rewind"
            android:layout_weight="1"
            style="@style/Fast_Rewind_and_Fast_Forward_Style"/>

        <ImageView
            android:src="@drawable/play"
            android:layout_weight="1"
            style="@style/Play_Pause_Style"/>

        <ImageView
            android:src="@drawable/fast_forward"
            android:layout_weight="1"
            style="@style/Fast_Rewind_and_Fast_Forward_Style"/>

        <ImageView
            android:src="@drawable/repeat"
            android:layout_weight="1"
            style="@style/Shuffle_and_Repeat_Style"/>

    </LinearLayout>

    <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
        style="@style/Random_Screen_description_Style"
        ext:documentView_insetPaddingBottom="@dimen/padding_large_x"
        ext:documentView_insetPaddingLeft="@dimen/padding_extra_large"
        ext:documentView_insetPaddingRight="@dimen/padding_extra_large"
        ext:documentView_insetPaddingTop="@dimen/padding_large_x"
        ext:documentView_text="@string/Random_Screen_description"
        ext:documentView_textAlignment="justified"
        ext:documentView_textColor="@color/Description_and_Playlist_categories_text_color"
        ext:documentView_textSize="@dimen/textSize_Main_Screen_and_Random_description"
        ext:documentView_textStyle="bold" />

</LinearLayout>